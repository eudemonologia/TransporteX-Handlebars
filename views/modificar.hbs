<h2>Modificando la novedad Nº {{articulo.id_publicaciones}}</h2>
<h3>{{user}}</h3>
<form class="form__mod" action="" method="POST" enctype="multipart/form-data">
  <label for="titulo">Titulo:</label>
  <input type="text" name="titulo" id="titulo" value="{{articulo.titulo}}" />
  <label for="subtitulo">Subtitulo:</label>
  <input
    type="text"
    name="subtitulo"
    id="subtitulo"
    value="{{articulo.subtitulo}}"
  />
  <label for="imagen">Imagen:</label>
  <input type="file" name="imagen" id="imagen" accept="image/*" />
  <label for="contenido">Contenido:</label>
  <textarea
    name="contenido"
    id="contenido"
    cols="30"
    rows="10"
  >{{articulo.contenido}}</textarea>
  <button type="submit">Publicar</button>
</form>
{{#if error}}
  <p class="error">{{error}}</p>
{{/if}}
<small><a href="./login/logout">Salir de la sesión</a></small>